<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nom"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:layout_marginTop="16dp"
        android:text="nom"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/codeBarre"
        android:layout_toEndOf="@+id/codeBarre"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/photo"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="prix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/prix"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:layout_alignBaseline="@+id/nom"
        android:layout_alignBottom="@+id/nom"
        android:layout_toRightOf="@+id/emplacement"
        android:layout_toEndOf="@+id/emplacement"
        android:layout_marginLeft="65dp"
        android:layout_marginStart="65dp" />

    <TextView
        android:text="emplacement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/emplacement"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:layout_below="@+id/nom"
        android:layout_toRightOf="@+id/nom"
        android:layout_toEndOf="@+id/nom" />

    <TextView
        android:text="promotion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/promotion"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:layout_below="@+id/quantite"
        android:layout_alignLeft="@+id/quantite"
        android:layout_alignStart="@+id/quantite" />

    <TextView
        android:text="codeBarre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/codeBarre"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:layout_alignBaseline="@+id/promotion"
        android:layout_alignBottom="@+id/promotion"
        android:layout_alignLeft="@+id/photo"
        android:layout_alignStart="@+id/photo" />

    <TextView
        android:text="quantite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/quantite"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:layout_below="@+id/emplacement"
        android:layout_alignLeft="@+id/emplacement"
        android:layout_alignStart="@+id/emplacement" />

</RelativeLayout>