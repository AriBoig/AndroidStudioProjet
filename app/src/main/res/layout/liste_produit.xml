<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:text="codeBarre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:id="@+id/codeBarre"
        android:layout_below="@+id/emplacement"
        android:layout_toRightOf="@+id/nom"
        android:layout_toEndOf="@+id/nom"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp" />

    <TextView
        android:text="emplacement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/emplacement"
        android:layout_marginTop="14dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:layout_below="@+id/nom"
        android:layout_toRightOf="@+id/nom"
        android:layout_toEndOf="@+id/nom" />

    <TextView
        android:text="prix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/prix"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:layout_alignBaseline="@+id/nom"
        android:layout_alignBottom="@+id/nom"
        android:layout_toRightOf="@+id/emplacement"
        android:layout_toEndOf="@+id/emplacement"
        android:layout_marginLeft="72dp"
        android:layout_marginStart="72dp" />

    <TextView
        android:text="quantite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/quantite"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:layout_alignBaseline="@+id/emplacement"
        android:layout_alignBottom="@+id/emplacement"
        android:layout_alignRight="@+id/promotion"
        android:layout_alignEnd="@+id/promotion" />

    <TextView
        android:text="promotion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/promotion"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:layout_alignBaseline="@+id/codeBarre"
        android:layout_alignBottom="@+id/codeBarre"
        android:layout_alignRight="@+id/prix"
        android:layout_alignEnd="@+id/prix" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/photo"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_alignTop="@+id/nom"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nom"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:layout_marginTop="16dp"
        android:text="nom"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/photo"
        android:layout_toEndOf="@+id/photo"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp" />

</RelativeLayout>